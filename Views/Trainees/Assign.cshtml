@model UserManagement02.ViewModels.TraineeAssignViewModel

@{
    ViewData["Title"] = "تعيين متدرب لقسم ومشرف";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Assign" method="post">
    <input type="hidden" asp-for="TraineeId" />

    <div class="mb-3">
        @Html.LabelFor(m => m.SelectedDepartmentId, "الإدارة", new { @class = "form-label" })
        @Html.DropDownListFor(m => m.SelectedDepartmentId, Model.Departments, "-- اختر إدارة --", new { @class = "form-select" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.SelectedSupervisorId, "المشرف", new { @class = "form-label" })
        @Html.DropDownListFor(m => m.SelectedSupervisorId, Model.Supervisors, "-- اختر مشرف --", new { @class = "form-select" })
    </div>

    <button type="submit" class="btn btn-success">حفظ التعيين</button>
    <a asp-controller="HumanResources" asp-action="Dashboard" class="btn btn-secondary">إلغاء</a>
</form>