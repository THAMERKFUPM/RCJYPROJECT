@model UserManagement02.ViewModels.SectionManagerAssignmentViewModel

@{
    ViewData["Title"] = "مسؤولو التدريب";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="SectionManager" method="post" class="w-50">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="SelectedDepartmentId" class="form-label"></label>
        <select asp-for="SelectedDepartmentId"
                asp-items="Model.Departments"
                class="form-select">
            <option value="">-- اختر الإدارة --</option>
        </select>
        <span asp-validation-for="SelectedDepartmentId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SelectedSupervisorId" class="form-label"></label>
        <select asp-for="SelectedSupervisorId"
                asp-items="Model.Supervisors"
                class="form-select">
            <option value="">-- اختر مشرف التدريب --</option>
        </select>
        <span asp-validation-for="SelectedSupervisorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">تأكيد</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
