@model UserManagement02.ViewModels.SupervisorsViewModel

@{
    ViewData["Title"] = "حذف مشرف";
}

<h1>@ViewData["Title"]</h1>
<h3>هل أنت متأكد من حذف هذا المشرف؟</h3>

<dl class="row">
    <dt class="col-sm-2">#</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">الاسم</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">البريد</dt>
    <dd class="col-sm-10">@Model.Email</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">حذف</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>