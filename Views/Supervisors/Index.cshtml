@model IEnumerable<UserManagement02.ViewModels.SupervisorsViewModel>

@{
    ViewData["Title"] = "المشرفون";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">مشرف جديد</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>الاسم</th>
        <th>البريد</th>
        <th>الهاتف</th>
        <th>الإدارة</th>
        <th>إجراءات</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var s in Model)
    {
        <tr>
            <td>@s.Id</td>
            <td>@s.FullName</td>
            <td>@s.Email</td>
            <td>@s.PhoneNumber</td>
            <td>@s.Department</td>
            <td>
                <a asp-action="Edit" asp-route-id="@s.Id">تعديل</a> |
                <a asp-action="Delete" asp-route-id="@s.Id">حذف</a>
            </td>
        </tr>
    }
    </tbody>
</table>